<assembly>
    <id>distribution-archive</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target/distro-contents</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>home</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/*.sh</include>
                <include>**/*.properties</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../core/target</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>**/*.so</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/home/lib</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>**/*.so</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>